
<LinearLayout
    android:orientation="vertical"
     android:background="#f5f5f5"
    android:layout_width="match_parent"
     android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.cardview.widget.CardView
    android:id="@+id/cv"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="1dp"
    app:cardElevation="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/image"
                android:layout_gravity="center"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:layout_weight=".2"
                android:src="@drawable/ic_videocam_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:maxLength="50"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:text="hdhs hds d fs dsss s sd fdd ss d s fds dfsd s"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                     android:text="sbhdhsn d s d d f  sa s asaaaaaaaaaaaaaaas s  ddddddddddddddddddddddddddddddddd ddddddddddddddd dddddddddddddddddddddddd dddddddddddddddddddddddddddd s s s  "
                    android:maxLines="3"
                    android:paddingLeft="15sp"
                    android:paddingRight="10sp"
                    android:textColor="#464646"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:text="15 january 2015 hhh gf fdf dfh gh g j"
                        android:textAlignment="textStart"
                        android:textColor="#ec4744"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:paddingLeft="15sp"
                        android:paddingRight="10sp"
                        android:text="15 january 2015ngh hb h bh hhhbhh"
                        android:textAlignment="textEnd"
                        android:textColor="#03a1f7"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>
