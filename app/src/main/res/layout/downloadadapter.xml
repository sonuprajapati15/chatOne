
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:elevation="40dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="260sp"
                android:elevation="50sp"
                android:src="@drawable/ic_videocam_black_24dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_videocam_black_24dp"
                    app:civ_border_color="#dadada"
                    app:civ_border_width="1dp" />


                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:text="hello how r u f d d s sfd gf d s redf fdf r sd df r dsddfg f d s s frfd f dd"
                    android:textColor="#818181"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="8sp"
                    android:text="hello"
                    android:textAlignment="viewEnd"
                    android:textColor="#818181"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="15sp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="12dp"
                android:text="Titled"
                android:textColor="#313131"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15sp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="6dp"
                android:text="hello dhjdbhhhhh hhhhhhhhhhhhhhn hhhhhhhhhhh hhhhhhhhhhhhhhhh hhhhhhhhhhhh jhhhhhhhhhhhhh hhhhhs "
                android:textColor="#636262"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Read More . . . . . . "
                android:layout_marginStart="18dp"
                android:layout_marginEnd="15dp"
                android:textAlignment="textStart"
                android:textColor="#02a8ba"
                android:textSize="14sp"  />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:elevation="50dp"
                    android:src="@drawable/ic_share_black_24dp" />

                <ImageView
                    android:id="@+id/delete"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                     android:src="@drawable/ic_delete_black_24dp"
                    android:layout_width="25dp"
                    android:layout_height="28dp"
                    android:elevation="50dp"  />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>