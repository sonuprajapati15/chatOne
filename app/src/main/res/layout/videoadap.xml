
<LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        card_view:cardElevation="2dp" >

        <LinearLayout
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thumb"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:src="@color/cardview_shadow_start_color" />

            <TextView
                android:id="@+id/channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_thumbnail"
                android:layout_marginTop="10dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="Video Title"
                 android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_thumbnail"
                android:layout_marginTop="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:textColor="#000"
                android:text="Video Title"
                 android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_id"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="6dp"
                android:maxLines="6"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Video Descriptionjdjnns dshjhdhddhdhsddssdhjdsjdsjsddnsd dshjds dshds d jdsndjndjnjdndj djndffdnf djdfndf djkdndmnd
                 jfdfjfdkjdfndf jdfndfnjn djdfndfjnj dfjdfndfn dfjndfdfn djdnnfdnf dsshds hdsh dsjhsd jdssdsdjdsjdjdfjdfjjkd djjfddfm djdfnmdmdss jdsndf dfnndf dsmnmnd mfdnnmndns,ksan dfmnds kd sosnunp raja pati arajshdsjjsdndsd"
                android:textColor="#636363"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_title"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="Video ID : N/A"
                android:textColor="#0096bf"
                android:textSize="10sp"
                android:textStyle="italic" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>